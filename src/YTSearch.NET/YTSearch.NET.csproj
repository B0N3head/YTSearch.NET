<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>YTSearch.NET</Title>
    <PackageId>YTSearch.NET</PackageId>
    <Version>1.0.1</Version>
    <Authors>UnidentifiedX</Authors>
    <Company>UnidentifiedX</Company>
    <Product>YTSearch.NET</Product>
    <Description>YouTube-Search library written in C# to search for YouTube videos</Description>
    <Copyright>MIT</Copyright>
    <RepositoryUrl>https://github.com/UnidentifiedX/YTSearch.NET</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>youtube-search, youtube-api, youtube, yt-search</PackageTags>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <PackageReleaseNotes>Added extra functionality for getting video metadata</PackageReleaseNotes>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
